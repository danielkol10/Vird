<div class="col-xs-12 col-sm-4">
   <div class="vacuum">

    <div class="vacuum-image" style="background: linear-gradient(to bottom,rgba(20,20,20, 0.2),rgba(76,76,76,0.2) 30%), url(<%= image_path(vacuum.image) %>) center / contain no-repeat;"></div>
      <div class="vacuum-content">
        <div class="vacuum-info">
          <div class="vacuum-name">
            <%= vacuum.model %>
          </div>

          <div class="vacuum-available">
            <% if vacuum.available? %>
              <div class="available">Available</div>
            <% else %>
              <div class="unavailable">Unavailable</div>
            <% end %>
          </div>

          <div class="vacuum-price">
            <p>$<%= vacuum.price %>/hour</p>
          </div>
        </div>
        <div class="vacuum-owner">
          <p>By <%= vacuum.user.first_name %></p>
        </div>
      <div class="vacuum-booking">
        <%= link_to "View Details", vacuum_path(vacuum), class: "btn btn-warning centered-button" %>
      </div>
    </div>
  </div>
</div>



